<h1>Uesr info</h1>
    <%= image_tag user.get_profile_image(100,100) %>
    
    <table class="table">
        <tr>
            <th>name</th> <th><%= user.name %></th>
        </tr>
        <tr>
            <th>introduction</th> <th><%= user.introduction %></th>
        </tr>
    </table>
    
    <p>
        <%= link_to edit_user_path(user) do %>
            <i class="fas fa-user-cog"></i>
        <% end %>
    </p>