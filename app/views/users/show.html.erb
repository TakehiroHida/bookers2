<div>
    <h1>Uesr info</h1>
    <%= image_tag @user.get_profile_image(100,100) %>
    <P>name</P>
    <%= @user.name %>
    <p>introduction</p>
    <%= @user.introduction %>
</div>

<div>
    <h1>New book</h1>
    <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %><br>
        <%= f.submit 'Create Book' %>
    <% end %>
</div>

<h1>Books</h1>
<table>
    <tr>
        <th></th> <th>Title</th> <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td><%= image_tag post_image.user.get_profile_image(100,100) %></td>
        <td><%= book.title %></td>
        <td><%= book.opinion %></td>
    </tr>
    <% end %>
</table>