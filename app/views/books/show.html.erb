<%= flash[:notice] %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render 'users/user', user: @book.user %>
            
            <%= render 'books/new', book: @book_new %>
        </div>
        
        <div class="col-md-8 offset-md-1">
            <h1>Book detail</h1>
            <table class="table">
                <tr>
                    <th>
                        <%= link_to user_path(@book.user.id) do %>
                            <%= image_tag @book.user.get_profile_image(100,100) %><br>
                            <%= @book.user.name %>
                        <% end %>
                    </th>
                    <th><%= link_to "#{@book.title}", book_path %></th>
                    <th><%= @book.body %></th>
                    <th>
                        <% if @book.user.id == @user.id %>
                            <%= link_to "Edit", edit_book_path(@book.id) %>
                            <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
                        <% end %>
                    </th>
                </tr>
            </table>
        </div>
    </div>
</div>